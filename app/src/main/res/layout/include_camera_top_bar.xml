<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/camera_top_bar_height"
    android:background="@color/theme_color"
    android:layout_alignParentTop="true">

    <ImageView
        android:src="@mipmap/head"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:divider="@drawable/crop__divider"
        android:dividerPadding="20dp"
        android:showDividers="middle|beginning"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/flash_light"
            android:layout_height="match_parent"
            android:layout_width="45dp"
            android:padding="10dp"
            android:background="@drawable/select_item_background"
            android:src="@mipmap/ic_flash_off_white_24dp"/>
        <ImageView
            android:id="@+id/switch_camera"
            android:layout_width="45dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/select_item_background"
            android:src="@mipmap/ic_camera_front_white_24dp"/>
    </LinearLayout>

</RelativeLayout>